<Page x:Class="GTBench.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GTBench"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home" Loaded="Page_Loaded">

    <Grid>
        <TextBlock Padding="6,6,6,6" TextWrapping="NoWrap" Background="LightGray" FontSize="16" VerticalAlignment="Top">Google Cloud Translation (Advanced)</TextBlock>
        <TextBox x:Name="status" Margin="0,34,0,0" Padding="10,6,10,10" TextWrapping="Wrap" IsReadOnly="true" VerticalScrollBarVisibility="Auto" BorderBrush="{x:Null}" SelectionBrush="{x:Null}"/>
        <TextBlock x:Name="warning" Margin="10,40,10,10" TextWrapping="Wrap">
            Access to Google Cloud Translation Service failed.
            Please check your Internet connection and review your access <Hyperlink Click="configuration_Click">configuration</Hyperlink>.
        </TextBlock>
    </Grid>
</Page>
